/* pages/me/me.wxss */
/* 头部区样式 */
.header {
  position: relative;
  height: 160rpx;
  line-height: 100rpx;
  padding: 30rpx 30rpx 30rpx 150rpx;
  box-sizing: border-box;
  background: #3e5f81;
  font-size: 28rpx;
  color: #fff;
}
/* 头部区头像样式 */
.header .thumb {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
/* 头部区二维码图标样式 */
.header .code {
  position: absolute;
  right: 30rpx;
  top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
/* 个人信息管理行样式 */
.info-box {
  border-bottom: 20rpx solid #ededed;
  color: #999;
  line-height: 90rpx;
  font-size: 28rpx;
}
/* 个人信息管理行文本样式 */
.info-box .info-manage {
  position: relative;
  height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center;
}
/* 个人信息管理行后面＞的样式 */
.info-box .info-manage::after {
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

/* 订单信息展示区样式 */
.orders-box {
  color: #999;
  font-size: 28rpx;
}
/* 订单信息展示区我的订单文本样式 */
.orders {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center;
}
/* 订单信息展示区订单列表样式 */
.orders-list {
  padding-left: 30rpx;
  border-bottom: 20rpx solid #ededed;
}
/* 订单信息展示区订单编号样式 */
.orders-number {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
/* 订单信息展示区订单详情样式 */
.orders-detail {
  position: relative;
  height: 120rpx;
  padding: 35rpx 20rpx 35rpx 170rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
/* 订单信息展示区订单详情中商品图片样式 */
.orders-detail image {
  position: absolute;
  left: 0;
  top: 20rpx;
  width: 150rpx;
  height: 150rpx;
}
/* 订单信息展示区订单详情中商品名称、单价、购买数量样式 */
.orders-detail view {
  line-height: 60rpx;
}
/* 订单信息展示区付款行样式 */
.orders-footer {
  height: 60rpx;
  line-height: 60rpx;
  color: #2f2f2f;
  padding: 15rpx 30rpx 15rpx 0;
}
/* 订单信息展示区付款行付款按钮样式 */
.orders-footer .orders-btn {
  float: right;
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background: #b42f2d;
  color: #fff;
}
